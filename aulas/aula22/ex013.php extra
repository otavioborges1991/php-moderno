            <?php
            $nome = "Otávio Vinicios Borges";
            echo $nome . "<br>";
            echo "O nome tem " . strlen($nome) . " caracteres.<br>";
            echo "A primeira letra do nome é: " . $nome[0] . "<br>";
            echo "A última letra do nome é: " . $nome[strlen($nome) - 1] . "<br>";
            echo "O nome em letras maiúsculas é: " . strtoupper($nome) . "<br>";
            echo "O nome em letras minúsculas é: " . strtolower($nome) . "<br>";
            echo "O nome com a primeira letra maiúscula é: " . ucfirst($nome) . "<br>";
            echo "O nome com todas as primeiras letras maiúsculas é: " . ucwords($nome) . "<br>";
            echo "O nome sem espaços é: " . str_replace(" ", "", $nome) . "<br>";
            echo "O nome com espaços removidos é: " . trim($nome) . "<br>";
            echo "O nome com espaços removidos à esquerda é: " . ltrim($nome) . "<br>";
            echo "O nome com espaços removidos à direita é: " . rtrim($nome) . "<br>";
            echo "O nome invertido é: " . strrev($nome) . "<br>";
            echo "O nome com a primeira letra maiúscula e o resto minúsculo é: " . ucfirst(strtolower($nome)) . "<br>";
            echo "O nome com a primeira letra maiúscula e o resto minúsculo é: " . ucwords(strtolower($nome)) . "<br>";
            echo "O nome com a primeira letra maiúscula e o resto minúsculo é: " . mb_convert_case($nome, MB_CASE_TITLE, "UTF-8") . "<br>";
            echo "O nome com a primeira letra maiúscula e o resto minúsculo é   : " . mb_convert_case($nome, MB_CASE_UPPER, "UTF-8") . "<br>";
            echo "O nome com a primeira letra maiúscula e o resto minúsculo é   : " . mb_convert_case($nome, MB_CASE_LOWER, "UTF-8") . "<br>";
            echo "O nome com a primeira letra maiúscula e o resto minúsculo é   : " . mb_convert_case($nome, MB_CASE_FOLD, "UTF-8") . "<br>";
            ?>
